@model List<UsuarioModel>
@{
    ViewData["Title"] = "oportunidades aqui";
}

<div class="main-banner-2">
            <div class="row">
              <div class="col-lg-7">
                <div class="header-text">
                  <h6>Bem-vindo</h6>
                  <h2 class="dif-text">Central de Oportunidades</h2>
                  <br />
                  <div class="main-button">
                    <a href="/Bookmark">Vagas Salvas</a>
                  </div>
                </div>
              </div>
            </div>
</div>
<br />
<div class="text-center">
    <h1 class="display-4">Vagas Abertas</h1>
</div>

<div class="container mt-5">
    <div class="row g-2">
        @if (Model != null && Model.Any())
        {
            foreach (UsuarioModel usuario in Model)
            {
                                                <div class="col-md-6">
                                                    <div class="card p-3">
                                                        <div>
                                                            <h3 class="mt-3 text-truncate">@usuario.Nome</h3>
                                                        </div>
                                                    </div>
                                                </div>
            }
        }
    </div>
</div>
<br /><br /><br />